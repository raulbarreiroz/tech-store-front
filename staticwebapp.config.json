{
  "trailingSlash": "auto",
  "routes": [
    {
      "route": "api/productos/",
      "methods": ["GET", "PUT", "POST", "DELETE"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "api/categorias/",
      "methods": ["GET", "PUT", "POST", "DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/",
      "methods": ["GET", "PUT", "POST", "DELETE"],
      "allowedRoles": ["anonymous", "authenticated"]
    }
  ],
  "responseOverrides": {    
    "404": {
      "redirect": "/"      
    }    
  },
  "globalHeaders": {    
    "Content-Security-Policy": "default-src 'self' https:; img-src 'self' data: https:; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https:;"
  },
  "mimeTypes": {
    ".json": "text/json"
  }
}